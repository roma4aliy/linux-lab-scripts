#!/bin/bash

# ===========================================
# Скрипт для підрахунку звичайних файлів
# у директорії /etc (без директорій та посилань)
# ===========================================

# Директорія для аналізу
TARGET_DIR="/etc"

# Перевірка існування директорії
if [ ! -d "$TARGET_DIR" ]; then
    echo "Помилка: директорія $TARGET_DIR не існує"
    exit 1
fi

# Ініціалізація лічильника
file_count=0

# Підрахунок файлів за допомогою find
# -type f - тільки звичайні файли
# -maxdepth 1 - тільки у вказаній директорії
file_count=$(find "$TARGET_DIR" -maxdepth 1 -type f | wc -l)

# Виведення результату
echo "======================================"
echo "Підрахунок файлів у директорії $TARGET_DIR"
echo "======================================"
echo ""
echo "Кількість звичайних файлів: $file_count"
echo ""
echo "(Директорії та символічні посилання не враховані)"

# Завершення з кодом успіху
exit 0
